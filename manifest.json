{
    "name": "Pelican",
    "id": "pelican",
    "packaging_format": 1,
    "description": {
        "en": "Static Site Generator",
        "fr": "Générateur de blog statique"
    },
    "version": "1.0~ynh2",
    "url": "https://blog.getpelican.com",
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://blog.getpelican.com",
        "admindoc": "https://docs.getpelican.com/en/latest/index.html",
        "code": "https://github.com/getpelican/pelican"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "Ylies Chahi",
        "email": "ylieschahi@gmail.com",
        "url": "http://thegoldenkoala.com"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/pelican",
                "default": "/pelican"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "author",
                "type": "user",
                "ask": {
                    "en": "Choose an author",
                    "fr": "Choisissez l'auteur"
                },
                "example": "johndoe",
                "default": "John Doe"
            },
            {
                "name": "title",
                "type": "string",
                "ask": {
                    "en": "Choose a default title for your website",
                    "fr": "Choisissez le titre par défaut de votre site"
                },
                "example": "My personal website"
            }
        ]
    }
}
